@model IEnumerable<SchoolManagement.Models.Entities.Schedual>


<!-- Datatables CSS -->


<link rel="stylesheet" href="~/template/assets/plugins/datatables/datatables.min.css">

<div class="content container-fluid">




    <div class="row">
        <div class="col-sm-12">

            <div class="card card-table">
                <div class="card-body">

                    <!-- Page Header -->
                    <div class="page-header">
                        <div class="row align-items-center">
                            <div class="col">
                                <h3 class="page-title">Schedules</h3>
                            </div>
                            <div class="col-auto text-end float-end ms-auto download-grp">
                              
                                <a href="#" class="btn btn-outline-primary me-2"><i class="fas fa-download"></i> Download</a>
                                <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i></a>
                            </div>
                        </div>
                    </div>
                    <!-- /Page Header -->

                    <div class="table-responsive">
                        <table class="table border-0 star-student table-hover table-center mb-0 datatable table-striped">
                            <thead class="student-thread">
                                <tr>
                           

                                    <th>Subject Name</th>
                                    <th>Teacher Name</th>
                                    <th>Grad</th>
                                    <th>Year</th>
                                    <th>Shift</th>
                                  

                                    <th class="text-end">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    string Imge = "";

                                <tr>
                                    @if (item.Status == true)
                                    {
                                        <td>
                                            <a asp-action="Details" asp-route-id="@item.Id">@item.SubjecName</a>  <i class="fa fa-check-circle"></i></td>
                                    }
                                    else
                                    {
                                <td><a asp-action="Details" asp-route-id="@item.Id">@item.SubjecName</a>  <i class="fa fa-sign-out"></i></td>

                                    }


                                    <td>@item.TeacherName</td>
                                    <td>@item.Grad</td>
                                    <td>@item.Year</td>
                                    <td>@item.Shift</td>
                                   

                                    <td class="text-end">
                                        <div class="actions">

                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm bg-danger-light">
                                                <i class="feather-edit"></i>
                                            </a>
                                        
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="10">@item.Comment</td>
                                </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




<!-- Datatables JS -->

<script src="~/template/assets/plugins/datatables/datatables.min.js" type="63ab970d43efa16255dcd8af-text/javascript"></script>

