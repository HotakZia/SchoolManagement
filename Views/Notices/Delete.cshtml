@model SchoolManagement.Models.db.Notice



<div class="card card-table">
    <div class="card-body">
        <div>
            <h4>Notice <span style="font-size:small">(@Model.RegisterNumber)</span></h4>

            <hr />
            <h5 style="text-align:center;color:orangered">@Model.Title</h5>
            <p style="text-align:center;">on the date of @Model.CreatedDate.Value.ToShortTimeString(), notice has been sent to @Model.Type . it will valid until @Model.Date.Value.ToLongDateString()</p>

            <p>@Html.Raw(Model.Comment)</p>

            <div class="row">
                <div class="col-lg-9">Created Date: @Model.CreatedDate</div>
                <div class="col-lg-3">Creator: @Model.ModifiedDate</div>
            </div>

        </div>
        <hr />
        <div>
            <h5>Are you sure you want to delete this?</h5>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
    </div>
</div>

