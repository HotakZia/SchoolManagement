@model IEnumerable<SchoolManagement.Models.db.Notice>



<div class="content container-fluid">


    <div class="row">
        <div class="col-sm-12">

            <div class="card card-table">
                <div class="card-body">

                    <!-- Page Header -->
                    <div class="page-header">
                        <div class="row align-items-center">
                            <div class="col">
                                <h3 class="page-title">Notice List</h3>
                            </div>
                            <div class="col-auto text-end float-end ms-auto download-grp">
                                @*<a href="teachers.html" class="btn btn-outline-gray me-2 active"><i class="feather-list"></i></a>
                                    <a href="teachers-grid.html" class="btn btn-outline-gray me-2"><i class="feather-grid"></i></a>*@
                                <a href="#" class="btn btn-outline-primary me-2"><i class="fas fa-download"></i> Download</a>
                                <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i></a>
                            </div>
                        </div>
                    </div>
                    <!-- /Page Header -->

                    <div class="table-responsive">
                        <table class="table border-0 star-student table-hover table-center mb-0 datatable table-striped">
                            <thead class="student-thread">
                                <tr>

                                    <th>Registration#</th>
                                    <th>Title</th>
                                    
                                    <th>Targeted Users</th>
                                    <th>Created Date</th>

                                    <th class="text-end">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    string Imge = "";

                                <tr>

                                    <td>@item.RegisterNumber</td>




                                    <td>@item.Title</td>

                                    <td>@item.Type</td>
                                    <td>@item.CreatedDate</td>
                                    @if (User.Claims.FirstOrDefault(x => x.Type == "Roles"&&x.Value=="Admin")!=null)
                                    {
                                                                          
                                            <td class="text-end">
                                                <div class="actions">
                                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm bg-success-light me-2">
                                                        <i class="feather-delete"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm bg-danger-light">
                                                        <i class="feather-edit"></i>
                                                    </a>


                                                </div>
                                            </td>
                                        }
                                                        else
                                        {
                                            <td></td>
                                        }

                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



