<script type="text/javascript">
    $('#date3-1').MdPersianDateTimePicker({
        targetTextSelector: '#inputDate3-1',
        targetDateSelector: '#Date',
        monthsToShow: [0, 0],
        //selectedDate:new Date(),
        selectedRangeDate: [new Date(), new Date()],
        rangeSelector: false,



    });
