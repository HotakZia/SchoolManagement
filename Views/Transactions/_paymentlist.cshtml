@model List<SchoolManagement.Models.db.Transaction>
@{ int number = 0;}
    <div class="row">
        @foreach (var item in Model)
        {
    
            <p></p>
            <input asp-for="@Model[number].RelationId"    type="hidden" required class="form-control" value="@item.RelationId" />
            <input asp-for="@Model[number].Type" type="hidden" required class="form-control" value="@item.Type" />

            <div class="form-group local-forms col-lg-4">
       
                    <label asp-for="@Model[number].Amount" class="control-label">Amount<span class="login-danger"> *</span></label>
                    <input asp-for="@Model[number].Amount" type="text" required class="form-control" value="@item.Amount" />
                    <span asp-validation-for="@Model[number].Amount" class="text-danger"></span>
              
            </div>

            <div class="form-group local-forms col-lg-4">
           
                    <label asp-for="@Model[number].Type" class="control-label">Payment Name<span class="login-danger"> *</span></label>
                    <input asp-for="@Model[number].Type" type="text" required class="form-control" value="@item.Type" />
                    <span asp-validation-for="@Model[number].Type" class="text-danger"></span>
               
            </div>
            <div class="form-group local-forms col-lg-4">
             
                    <label asp-for="@Model[number].Date" class="control-label">Date<span class="login-danger"> *</span></label>
                    <input asp-for="@Model[number].Date" type="text" required class="form-control" value="@DateTime.Now.ToString("MM/dd/yyyy")" />
                    <span asp-validation-for="@Model[number].Date" class="text-danger"></span>
               
            </div>
            number++;
        }

    </div>