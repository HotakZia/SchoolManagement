<!-- jQuery -->



<script>
    function lOnBegin() {
        $("#_btnText").text("checking credentials...");
        $('#_btnLogin').prop('disabled', true);

        $("#_btnLoader").show();
    }
    function LoginPass(data) {
      

        if (data.status == "true") {
                 //$("#_btnText").text("redirecting to dashboard...");
              @*document.location.href = "@Url.Action("cPanel","BasePanal")",true;*@
            if (data.role=="Admin") {
                  window.location.href = '@Url.Action("Index", "Home")';
            }
            else if (data.role=="Teacher") {
                  window.location.href = '@Url.Action("Teacher", "Home")';
            }
            else if (data.role=="Student") {
                  window.location.href = '@Url.Action("Student", "Home")';
            }
          
        }
        else {

            $("#_viewLogin").html(data);
        }

    }
    function lOnFailure(data) { }
    function lOnComplete(data) {

                $('#_btnLogin').prop('disabled', false);


    }
</script>