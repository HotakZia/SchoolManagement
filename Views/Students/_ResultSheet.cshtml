@model IEnumerable<SchoolManagement.Models.Entities.Exam>

@{ decimal? number = 0;}
    <div class="container">
        <div class="row">
            <div class="col-lg-8">

                <table class="table table-striped" border="1">

                    <tbody>
                        <tr>
                            <td>Subject</td>
                            <td>Frist Exam</td>
                            <td>Second Exam</td>
                            <td>Class</td>
                            <td>Home</td>
                            <td>Attendance</td>
                        </tr>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>@item.SubjectName</td>
                                <td>@item.FirstExam</td>
                                <td>@item.SecondExam</td>
                                <td>@item.ClassActivity</td>
                                <td>@item.HomeActivity</td>
                                <td>@item.Attendance</td>

                            </tr>
                            number += item.FirstExam + item.SecondExam + item.ClassActivity + item.HomeActivity + item.Attendance;
                        }

                    </tbody>

                </table>
              
            </div>

            <div class="col-lg-4">
                <p>Total Marks: @number </p>
                <hr />
                <p>Status:</p><strong>@ViewBag.Result</strong>
            </div>

        </div>
        <hr />
        <p>Note:</p>
    </div>

