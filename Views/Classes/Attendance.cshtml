@section Scripts {



    <script>

        function OnBegin() {
            $('.page-loader').show();

        }
        function attendanceOnSuccess(data) {

            if (data.status == "false") {
                swal("False!", data.message, "error");
            }
            else {
                $('#attendanceList').html(data);
            }

        }
        function OnComplete() {
            $('.page-loader').hide();

        }
    </script>
