@model IEnumerable<SchoolManagement.Models.db.Blog>
<!-- Datatables CSS -->
@*@{

        Layout = "~/Views/Shared/_Layout.cshtml";
    }*@


<div class="table-responsive">
    <table class="table border-0 star-student table-hover table-center mb-0 datatable table-striped">
        <thead class="student-thread">
            <tr>
                <th>
                    <div class="form-check check-tables">
                        <input class="form-check-input" type="checkbox" value="something">
                    </div>
                </th>
                <th>Id</th>

                <th>Photo</th>
                <th>Title</th>
                <th>Created Date</th>
                <th>Status</th>

                <th class="text-end">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                string Imge = "";

            <tr>


                <td>
                    <div class="form-check check-tables">
                        <input class="form-check-input" type="checkbox" value="something">
                    </div>
                </td>
                <td>@item.Number</td>

                @if (item.Attachment != null)
                {
                    Imge = Convert.ToBase64String(item.Attachment);
                    <td>

                        <img src="@string.Format("data:image/jpeg;base64,{0}",Imge)" class="img-fluid rounded" width="200" />

                    </td>
                }
                else
                {
                    <td>
                        <a href="teacher-details.html" class="avatar avatar-sm me-2"><img class="avatar-img rounded-circle" src="assets/img/profiles/avatar-02.jpg" alt="User Image"></a>


                    </td>
                }

                <td>@item.Title</td>
                <td>@item.CreatedDate</td>
                <td>@item.Status</td>



                <td class="text-end">
                    <div class="actions">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm bg-success-light me-2">
                            <i class="feather-eye"></i>
                        </a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm bg-danger-light">
                            <i class="feather-edit"></i>
                        </a>
                    </div>
                </td>
            </tr>
            }


        </tbody>
    </table>
</div>


